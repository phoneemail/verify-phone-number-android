<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoneVerificationByPhoneEmail" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BasicStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>


    <!--TextView-->

    <style name="TextViewStyleRegular" parent="BasicStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextViewStyleMedium" parent="TextViewStyleRegular">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextViewStyleBold" parent="TextViewStyleRegular">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!--EditText-->

    <style name="EditTextStyleRegular" parent="TextViewStyleRegular">
        <!--<item name="android:textColorHint">@color/black_light</item>-->
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="EditTextStyleMedium" parent="EditTextStyleRegular">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EditTextStyleBold" parent="EditTextStyleRegular">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <style name="EditTextStylePlainRegular" parent="TextViewStyleRegular">
        <!--<item name="android:textColorHint">@color/black_light</item>-->
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <!--Button-->

    <style name="ButtonStyleRegular" parent="BasicStyle">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonStyleMedium" parent="ButtonStyleRegular">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonStyleBold" parent="ButtonStyleRegular">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!--Toolbar-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="@android:style/Theme.Holo" />


</resources>